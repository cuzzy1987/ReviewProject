<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.test.FormActivity">

<include layout="@layout/include_toolbar_layout"/>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/appbarLayout"
        android:id="@+id/paramLl"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="参数1："
            android:gravity="center|right|bottom"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:hint="请输入参数1"
            android:id="@+id/param1Et"
            android:gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/paramLl"
        android:id="@+id/param2Ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="参数2："
            android:gravity="center|right|bottom"
            />
        <EditText
            android:id="@+id/param2Et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:hint="请输入参数2"
            android:gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/param2Ll"
        android:id="@+id/param3Ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="参数3："
            android:gravity="center|right|bottom"
            />
        <EditText
            android:id="@+id/param3Et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:hint="请输入参数3"
            android:gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:background="@android:color/white"
        android:id="@+id/param4Ll"
        app:layout_constraintTop_toBottomOf="@+id/param3Ll"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="参数4："
            android:gravity="center|right|bottom"
            />
        <EditText
            android:id="@+id/param4Et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="@null"
            android:hint="请输入参数4"
            android:gravity="bottom"
            />
    </LinearLayout>

    <Button
        android:id="@+id/submitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>